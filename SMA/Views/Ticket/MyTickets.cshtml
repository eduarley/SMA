@model IEnumerable<SMA.Entities.TTicket>

@{
    ViewData["Title"] = "Tickets";
}
<link href="~/lib/datatable/datatables-bs4/css/dataTables.bootstrap4.css" rel="stylesheet" />
<link href="~/lib/datatable/datatables-responsive/css/responsive.bootstrap4.css" rel="stylesheet" />
<link href="~/lib/datatable/datatables-buttons/css/buttons.bootstrap4.css" rel="stylesheet" />

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Principal")">Inicio</a></li>
                    <li class="breadcrumb-item active">Mis tickets</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>




<div class="row">
    <div class="col-md-12 text-left">
        <a class="btn btn-success" asp-action="Create">Nuevo Ticket <i class="fa-solid fa-plus"></i></a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <table class="table table-hover" id="example1">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Revisado)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Titulo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Descripcion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Fecha)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IdPrioridadNavigation)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">
                            @if (item.Revisado)
                            {
                                <i class="text-success fa-solid fa-circle-check"></i>
                            }
                            else
                            {
                                <i class="text-danger fa-solid fa-circle-xmark"></i>
                            }

                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Titulo)
                        </td>
                        <td class="text-justify">
                            @if (item.Descripcion != null)
                            {
                                var desc = item.Descripcion.Length > 15 ? item.Descripcion.Substring(0, 15) + "..." : item.Descripcion;
                                @Html.DisplayFor(modelItem => desc)
                            }

                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Fecha)
                        </td>
                        <td class="text-center">
                            @if (String.Equals(item.IdPrioridadNavigation.TipoPrioridad, "baja", StringComparison.OrdinalIgnoreCase))
                            {
                                <!--<h5><span class="badge badge-pill w-100 h-100" style="background-color: #FFFACD">Bajo</span></h5>-->
                                <div style="display:flex">
                                    <div style="background-color: #e5d69f; " class="prioridad"></div>
                                    <p>Bajo</p>
                                </div>
                            }
                            @if (String.Equals(item.IdPrioridadNavigation.TipoPrioridad, "media", StringComparison.OrdinalIgnoreCase))
                            {
                                <div style="display:flex">
                                    <div style="background-color: #FF961E;" class="prioridad"></div>
                                    <p>Medio</p>
                                </div>
                            }
                            @if (String.Equals(item.IdPrioridadNavigation.TipoPrioridad, "alta", StringComparison.OrdinalIgnoreCase))
                            {
                                <div style="display:flex">
                                    <div style="background-color: #FF4500;" class="prioridad"></div>
                                    <p>Alto</p>
                                </div>
                            }
                            @if (String.Equals(item.IdPrioridadNavigation.TipoPrioridad, "urgente", StringComparison.OrdinalIgnoreCase))
                            {
                                <div style="display:flex">
                                    <div style="background-color: #FF0000;" class="prioridad"></div>
                                    <p>Urgente</p>
                                </div>
                            }
                            @if (String.Equals(item.IdPrioridadNavigation.TipoPrioridad, "crítica", StringComparison.OrdinalIgnoreCase))
                            {
                                <div style="display:flex">
                                    <div style="background-color: #000000;" class="prioridad"></div>
                                    <p>Crítico</p>
                                </div>

                            }

                        </td>
                        <td>
                            <a asp-action="DetailsReviewReadOnly" asp-route-id="@item.NumTicket" class="btn btn-info"><i class="fa-solid fa-up-right-and-down-left-from-center"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


@section Scripts {

    <script src="~/lib/datatable/datatables/jquery.dataTables.js"></script>
    <script src="~/lib/datatable/datatables-bs4/js/dataTables.bootstrap4.js"></script>
    <script src="~/lib/datatable/datatables-responsive/js/dataTables.responsive.js"></script>
    <script src="~/lib/datatable/datatables-responsive/js/responsive.bootstrap4.js"></script>
    <script src="~/lib/datatable/datatables-buttons/js/dataTables.buttons.js"></script>
    <script src="~/lib/datatable/datatables-buttons/js/buttons.bootstrap4.js"></script>
    <script src="~/lib/datatable/jszip/jszip.js"></script>
    <script src="~/lib/datatable/pdfmake/pdfmake.js"></script>
    <script src="~/lib/datatable/pdfmake/vfs_fonts.js"></script>
    <script src="~/lib/datatable/datatables-buttons/js/buttons.html5.js"></script>
    <script src="~/lib/datatable/datatables-buttons/js/buttons.print.js"></script>
    <script src="~/lib/datatable/datatables-buttons/js/buttons.colVis.js"></script>


    <script>
        $(function () {
            $("#example1").DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.16/i18n/Spanish.json"
                },

                "responsive": true, "lengthChange": false, "autoWidth": false, pageLength: 5,
                "bSort": false

            })

        });
    </script>
}