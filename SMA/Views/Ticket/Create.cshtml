@model SMA.Entities.TTicket

@{
    ViewData["Title"] = "Crear ticket";
}


<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">

            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Principal")">Inicio</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Ticket")">Tickets</a></li>
                    <li class="breadcrumb-item active">Nuevo</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>


<div class="card">
    <div class="card-body">
        <form id="form" asp-action="Save" enctype="multipart/form-data" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-6">

                        <div class="form-group">
                            <label asp-for="Titulo" class="control-label"></label>
                            <input asp-for="Titulo" class="form-control" />
                            <span id="Titulo-error" asp-validation-for="Titulo" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Descripcion" class="control-label"></label>
                            <textarea asp-for="Descripcion" class="form-control" ></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="IdPrioridad" class="control-label"></label>
                            <select asp-for="IdPrioridad" class="form-control" asp-items="ViewBag.IdPrioridad"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="TArchivos" class="control-label"></label>
                            <input type="file" multiple="multiple" name="files" class="form-control" accept=".jpg,.jpeg,.png,.doc,.docx,.pdf,.mp4,.pptx,.xlsx,.xml" />
                            <small class="text-muted"><i class="fa-solid fa-info-circle mr-2"></i>Puedes seleccionar uno o más archivos.</small>
                        </div>
                    </div>

                        <div class="form-group">
                            <input type="button" onclick="confirmation()" value="Guardar" class="btn btn-primary" />
                        </div>


                </div>

            </div>
        </form>
    </div>
</div>


<div>
    <a asp-action="Index"><i class="fa-solid fa-circle-arrow-left"></i>   Volver atrás</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}


    <script>

        function confirmation() {
            swal({
                title: "Confirmar",
                text: "Una vez creado el ticket, no se podrá editar. Revise bien la información que será enviada.",
                icon: "info",
                buttons: true,
                dangerMode: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',

                buttons: ["Cancelar", "Confirmar"],
                /*buttons: {
                    cancel: 'Cancelar',
                    confirm: { text: 'Crear', className: 'btn btn-success' }
                },*/
                
            })
                .then((result) => {
                    if (result) {
                       
                        if (document.getElementById('Titulo').value == '') {
                            document.getElementById('Titulo-error').innerHTML = 'Título es un campo requerido.';
                            return;
                        }
                        
                        document.getElementById('form').submit();
                    }
                });
        }
        
    </script>
}
