@model SMA.Models.ViewModels.LoginViewModel
@{
    
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/reset.css" />
    <meta name="viewport" content="width=device-width" />
    <link href="~/css/login.css" rel="stylesheet" />
    <title>Inicio de sesión</title>
</head>
<body>

    <!-- partial:index.partial.html -->
    <div id="back">
        <div class="backRight"></div>
        <div class="backLeft"></div>
    </div>

    <div id="slideBox">
        <div class="topLayer">
            <div class="right">
                @if (TempData["success"] != null)
                {
                    <div class="alert alert-success" role="alert">
                        <strong>Usuario: </strong> @TempData["success"]
                    </div>
                }


                @if (TempData["mensaje"] != null)
                {
                    <div class="alert alert-warning" role="alert">
                        <strong>Usuario: </strong> @TempData["mensaje"]
                    </div>
                }

                @if (TempData["error"] != null)
                {
                    <div class="alert alert-danger " role="alert">
                        <strong>Usuario: </strong> @TempData["error"]
                    </div>
                }
                <center>

                </center>

                <div class="container col-sm-8 col-md-8 col-lg-6 mt-5">
                    <center style="margin: 0px">
                        <img src="~/img/logo.png" style="height:110px; margin-top: 10px" />
                        <h2>Iniciar sesión</h2>
                    </center>
                    <form asp-action="LogIn">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <input asp-for="Correo" class="form-control" placeholder="Correo electrónico" />
                            <span asp-validation-for="Correo" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Clave" class="form-control" placeholder="Contraseña" />
                            <span asp-validation-for="Clave" class="text-danger"></span>
                        </div>


                        <div class="form-group">
                            <input type="submit" value="Iniciar sesión" class="btn btn-primary btn-block" />
                        </div>
                        <center>
                            <a asp-action="Index" asp-controller="Recovery">¿Olvidó su contraseña?</a>
                        </center>

                    </form>
                </div>
            </div>
        </div>
    </div>





